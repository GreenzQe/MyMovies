<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.media.MediaView?>

<StackPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.easv.mymovies.GUI.Controller.MoviePlayerController">
        <VBox>
                <Pane prefHeight="50" style="-fx-background-color: black;" />
                <Pane style="-fx-background-color: black;">
                        <MediaView fx:id="mediaView" />
                </Pane>
                <Pane prefHeight="50" style="-fx-background-color: black;" />
        </VBox>
        <BorderPane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: transparent;">
                <bottom>
                        <FlowPane alignment="BOTTOM_CENTER" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: transparent;" BorderPane.alignment="CENTER_RIGHT">
                                <children>
                                        <Button fx:id="fullScreenButton" onAction="#handleFullScreenButtonAction" text="Full Screen" />
                                        <Button fx:id="playPauseButton" onAction="#handlePlayPauseButtonAction" text="Play" />
                                        <Button mnemonicParsing="false" text="Button" />
                                        <Slider fx:id="volumeSlider" min="0" max="1" value="0.5" />
                                </children>
                                <BorderPane.margin>
                                        <Insets bottom="12.0" />
                                </BorderPane.margin>
                        </FlowPane>
                </bottom>
                <center>
                        <Pane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: transparent;" BorderPane.alignment="CENTER" />
                </center>
        </BorderPane>
</StackPane>
